<h1>Editing Task</h1>

<% if flash[:notice] %>
  <% flash[:notice].each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>
<br>

<%= form_for @task, url: "/tasks/#{@task.id}" do |f| %>

  Description: <%= f.text_field :description %><br>
  Completed: <%= f.check_box :completed %>
  <%= f.submit "Submit" %>

<% end %>
<br>

<%= link_to 'Show', @task %> |
<%= link_to 'Back', tasks_path %>
